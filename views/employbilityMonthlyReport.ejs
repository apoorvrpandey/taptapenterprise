   <script>
      fetch('api/emp_monthly_report/month_wise_progress')
        .then(response => response.json())
        .then(data => {
          const tableBody = document.getElementById('dataRows');
          const headers = Object.keys(data[0]);
          const transposedData = headers.map(header => [header, ...data.map(row => row[header])]);
    
          // Define hardcoded values for the first column
          const hardcodedFirstColumn = ['Student Count', 'Average Employalibity Scores', 'Average Aptitude Scores', 'Average English Scores', 'Average Coding Scores','Band A Count', 'Band B Count' , 'Band C Count', 'Band D Count','Band F Count']; // Adjust the number of elements as needed
    
          // Add a row for the headers
          const firstRow = document.createElement('tr');
          const firstCell = document.createElement('td');
          firstCell.textContent = ''; // Empty cell in the first row, first column
          firstRow.appendChild(firstCell);
          transposedData[0].slice(1).forEach(cellData => {
            const td = document.createElement('td');
            td.textContent = cellData;
            firstRow.appendChild(td);
          });
          tableBody.appendChild(firstRow);
    
          // Add rows for the rest of the data
          transposedData.slice(1).forEach((rowData, index) => {
            const tr = document.createElement('tr');
            const firstCellData = hardcodedFirstColumn[index] || ''; // Use hardcoded values or empty string if index exceeds the array
            const td = document.createElement('td');
            const span = document.createElement('span');
            span.textContent = firstCellData;
            if (index % 3 === 0) {
              span.className = 'table-orange';
            } else if (index % 3 === 1) {
              span.className = 'table-blue';
            } else {
              span.className = 'table-green';
            }
            td.appendChild(span);
            tr.appendChild(td);
            rowData.slice(1).forEach(cellData => {
              const td = document.createElement('td');
              td.textContent = cellData;
              tr.appendChild(td);
            });
            tableBody.appendChild(tr);
          });
        });


        
    </script>
    


